<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.PantallaCarga">


    <View
        android:id="@+id/rectangle"
        android:layout_width="500dp"
        android:layout_height="900dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/rectangle"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintHorizontal_bias="0.506"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.39"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/logo_01_1"
        android:layout_width="309dp"
        android:layout_height="226dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_constraintHorizontal_bias="0.491"
        android:layout_constraintVertical_bias="0.126"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/logo_01_1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="66dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="263dp"
        android:fontFamily="@font/roboto_black"
        android:text="AYUDANOS A SALVAR VIDAS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />


</FrameLayout>