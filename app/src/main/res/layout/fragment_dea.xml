<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DeaFragment">


    <TextView
        android:id="@+id/dea_title"
        android:layout_width="295dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        android:text="Ubicación del DEA a agregar"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/longitud_ubicacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/latitud_ubicacion"
        android:layout_width="182dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="64dp"
        android:hint="Latitud"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitud_ubicacion" />

    <EditText
        android:id="@+id/direccion_encontrada"
        android:layout_width="182dp"
        android:layout_height="62dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="256dp"
        android:hint="Dirección"
        android:inputType="textPersonName"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitud_ubicacion"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/longitud_ubicacion"
        android:layout_width="182dp"
        android:layout_height="66dp"
        android:layout_marginTop="124dp"
        android:hint="Longitud"
        android:inputType="textPersonName"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longitud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="48dp"
        android:text="Longitud"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintEnd_toStartOf="@+id/longitud_ubicacion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitud_title"
        android:layout_width="67dp"
        android:layout_height="42dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="100dp"
        android:text="Latitud"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/direccion_title"
        app:layout_constraintEnd_toStartOf="@+id/latitud_ubicacion"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitud_title"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/direccion_title"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="116dp"
        android:text="Dirección"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/volver_map"
        app:layout_constraintEnd_toStartOf="@+id/direccion_encontrada"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/volver_map"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#DD0C0C"
        android:text="volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_dea"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_dea"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#DD0C0C"
        android:text="Confirmar DEA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/ic_add_circle"
        app:layout_constraintBottom_toTopOf="@+id/longitud_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>